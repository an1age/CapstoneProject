@model TodoListApp.WebApi.Models.Entities.TaskItem

@{
	ViewData["Title"] = "Edit Task";
}

<h1>Edit Task</h1>

<h4>TaskItem</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="EditTask">
			<div class="form-group">
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="TodoListId" />
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DueDate" class="control-label"></label>
				<input asp-for="DueDate" class="form-control" />
				<span asp-validation-for="DueDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Details" asp-controller="TodoList" asp-route-id="@Model.TodoListId" class="btn btn-secondary">Back to Tasks</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
