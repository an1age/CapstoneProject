@model TodoListApp.WebApi.Models.Entities.TaskItem

@{
	ViewData["Title"] = "Task Details";
}

<h1>Task Details</h1>

<div class="form-group">
	<label>Title</label>
	<p class="form-control-static">@Model.Title</p>
</div>
<div class="form-group">
	<label>Description</label>
	<p class="form-control-static">@Model.Description</p>
</div>
<div class="form-group">
	<label>Status</label>
	<p class="form-control-static">@Model.IsCompleted</p>
</div>
<div class="form-group">
	<label>Due Date</label>
	<p class="form-control-static">@Model.DueDate</p>
</div>

<div>
	<a asp-action="EditTask" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |
	<a asp-action="DeleteTask" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a> |
	<a asp-action="Details" asp-controller="TodoList" asp-route-id="@Model.TodoListId" class="btn btn-secondary">Back to TodoList</a>
</div>
